@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Lista de Raças</h1>

<div class="row mb-2">
    <div class="text-end">
        <a href="/raca/cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-dark table table-striped table-bordered">
    <thead>
        <!-- Cabeçalho da tabela-->
        <tr>
            <!--Linha da tabela-->
            <th>Código</th> <!-- Coluna especifica do cabeçalho -->
            <th>Nome</th>
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <!-- Lugar dos registros da tabela -->
        @foreach (var raca in ViewBag.Racas)
        {
            <tr>
                <!-- Linhas -->
                <td>@raca.Id</td> <!-- Coluna especifica para body -->
                <td>@raca.Nome</td>
                <td>@raca.Especie</td>
                <td>
                    <a href="/raca/editar?id=@raca.Id" class="btn btn-warning">Editar</a>
                    <a href="/raca/apagar?id=@raca.Id" class="btn btn-danger">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>